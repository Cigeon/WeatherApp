@model IEnumerable<WeatherApp.Models.WeatherForecast>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Previous requests</h2>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Dt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReqCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReqPeriod)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Dt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReqCity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReqPeriod)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Home")'">Back</button>
